{
  "name": "code-concat-ai",
  "displayName": "Code Concat AI",
  "description": "Concatenate multiple code files into one LLMâ€‘ready file",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-concat-ai.copyToOne",
        "title": "Copy Code to Single File"
      },
      {
        "command": "code-concat-ai.toggleSelect",
        "title": "Toggle File Selection",
        "category": "Code Concat AI"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-concat-ai-container",
          "title": "Code Concat AI",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "code-concat-ai-container": [
        {
          "id": "code-concat-ai.fileSelector",
          "name": "File Selector",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "code-concat-ai.copyToOne",
          "when": "view == code-concat-ai.fileSelector",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "webpack",
    "watch": "webpack --watch",
    "vscode:prepublish": "npm run package",
    "package": "webpack --mode production --devtool hidden-source-map"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.99.0",
    "copy-webpack-plugin": "^11.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
